<UserControl x:Class="TimeLineControlLibrary.BarLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeLineControlLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="80"
             Width="80" Height="25">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="Yellow">
            <TextBlock Text="{Binding FAOIName}"/>
            <TextBlock Text="{Binding FAOIOrderNumber}"/>
            <TextBlock Text="{Binding TimeBegin}"/>
            <TextBlock Text="{Binding TimeEnd}"/>
            <TextBlock Text="{Binding Duration}"/>
        </StackPanel>
    </Grid>
</UserControl>
