<UserControl x:Class="DataImpression.View.DocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataImpression.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="LightGreen" Loaded="UserControl_Loaded">
    <Grid x:Name="Container" Margin="10" Background="LightGray" >
        <Button Width="300" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"  Content="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
