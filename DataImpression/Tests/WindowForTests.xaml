<Window x:Class="DataImpression.Tests.WindowForTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataImpression.Tests"
        mc:Ignorable="d"
        Title="WindowForTests" Height="450" Width="800">
    <Grid x:Name="GridMain">
        <local:TestScrollableView  WidthContainer="{Binding ElementName=GridMain, Path=ActualWidth}"/>
    </Grid>
</Window>
